    <macrodef name="copy-to-out">
        <attribute name="out.dir"/>
        <attribute name="from.dir"/>
        <sequential>
            <copy todir="@{out.dir}" overwrite="true">
                <fileset dir="${offline.module.root}/ionic/src/main/@{from.dir}">
                    <include name="**/*.*"/>
                </fileset>
            </copy>
        </sequential>
    </macrodef>

